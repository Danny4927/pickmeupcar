# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.index(s: String ?= "")
POST         /                         controllers.Application.index(s: String ?= "")

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)

#GET         /login                controllers.Application.login()
#POST        /login                controllers.Application.authenticate()
GET         /login                    controllers.Application.getLoginForm(id: Long ?= 0)
POST        /login                    controllers.Application.postLoginForm()

GET         /logout                    controllers.Application.logout()

GET         /angebote                 controllers.OfferController.getLastOffers()

GET         /angeboteinstellen        controllers.Application.getOfferForm(id: Long ?= 0)
POST        /angeboteinstellen        controllers.Application.postOfferForm()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
GET         /webjars/*file            controllers.WebJarAssets.at(file)




    